<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:gravity="center"
	android:background="@drawable/fitness_smart">
	<RelativeLayout android:layout_height="wrap_content"
		android:id="@+id/sb_Ly1" android:layout_width="match_parent">
		<Button android:layout_height="wrap_content"
			android:layout_width="match_parent" android:layout_alignParentBottom="true"
			android:text="운동시작" android:layout_marginLeft="29dip"
			android:layout_marginRight="29dip" android:layout_marginBottom="30dip"
			android:id="@+id/sbmotionswim_Btn1"></Button>
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginBottom="22dp"
			android:layout_above="@+id/sbmotionswim_Btn1" android:layout_alignLeft="@+id/sbmotionswim_Btn1"
			android:id="@+id/sbmotionswim_Iv1" android:src="@drawable/distance_timer"></ImageView>
		<TextView android:textSize="25dip" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:textColor="#000000" android:layout_marginBottom="7dp"
			android:layout_marginRight="15dp" android:id="@+id/sbmotionswim_Tv1"
			android:layout_alignBottom="@+id/sbmotionswim_Iv1"
			android:layout_alignRight="@+id/sbmotionswim_Iv1" android:text="00:20"></TextView>
		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_marginLeft="60dp"
			android:textColor="#000000" android:textSize="25dip"
			android:layout_alignTop="@+id/sbmotionswim_Tv1" android:id="@+id/sbmotionswim_Tv2"
			android:layout_alignLeft="@+id/sbmotionswim_Iv1" android:text="0 m"></TextView>
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true" android:layout_marginTop="40dp"
			android:id="@+id/sbmotionswim_Iv2" android:src="@drawable/motion4_up"></ImageView>
		<SurfaceView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_below="@+id/sbmotionswim_Iv2"
			android:layout_alignLeft="@+id/sbmotionswim_Iv2" android:layout_above="@+id/sbmotionswim_Iv1"
			android:layout_alignRight="@+id/sbmotionswim_Iv2"
			android:layout_marginTop="18dp" android:layout_marginBottom="10dp"
			android:id="@+id/sbmotionswim_Sv1"></SurfaceView>
		<ImageButton android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/sbmotionswim_Ibn1"
			android:background="@drawable/button_play" android:layout_alignTop="@+id/sbmotionswim_Sv1"
			android:layout_alignLeft="@+id/sbmotionswim_Sv1"
			android:layout_marginLeft="5dp" android:layout_marginTop="5dp"></ImageButton>
	</RelativeLayout>
</LinearLayout>
