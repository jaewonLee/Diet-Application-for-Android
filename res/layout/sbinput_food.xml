<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:background="@drawable/bg">
	<TextView android:id="@+id/textView4" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text=" "></TextView>
	<TableLayout android:id="@+id/tableLayout1"
		android:stretchColumns="1" android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TableRow android:id="@+id/tableRow1" android:layout_height="wrap_content"
			android:layout_width="wrap_content">
			<LinearLayout android:layout_height="wrap_content" android:layout_width="320dp" android:id="@+id/sbinput_Ly1">
				<EditText android:layout_weight="1" android:id="@+id/insert_food_name" android:layout_height="wrap_content" android:layout_width="100dp">
					<requestFocus></requestFocus>
				</EditText>
				<Button android:layout_weight="1" android:text="검색" android:id="@+id/serch_food" android:layout_height="wrap_content" android:layout_width="15dp"></Button>
				<Button android:layout_height="wrap_content" android:layout_weight="1" android:text="직접 입력" android:layout_width="20dp" android:id="@+id/input_food"></Button>
			</LinearLayout>
		</TableRow>
		<TextView android:id="@+id/textView2" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="  "
			android:textSize="30px"></TextView>
		<TextView android:text="" android:id="@+id/descrip_food"
			android:layout_height="wrap_content" android:gravity="center"
			android:layout_width="wrap_content" android:textColor="#000000"
			android:textSize="20px" android:paddingBottom="17px"></TextView>

		<TableRow android:id="@+id/tableRow2" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:gravity="center">
			<Gallery android:id="@+id/gallery1" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_span="3"></Gallery>
		</TableRow>
		<TableRow android:layout_height="wrap_content" android:id="@+id/tableRow3"
			android:layout_width="wrap_content" android:gravity="center">
			<Gallery android:id="@+id/gallery2" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_span="3"></Gallery>
		</TableRow>
		<TableRow android:id="@+id/tableRow4" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:gravity="center">
			<Gallery android:id="@+id/gallery3" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_span="3"></Gallery>
		</TableRow>
	</TableLayout>
	<RelativeLayout android:layout_height="wrap_content"
		android:layout_width="match_parent" android:id="@+id/relativeLayout1">
		<Button android:layout_height="wrap_content"
			android:layout_alignParentBottom="true" android:layout_width="match_parent"
			android:id="@+id/insert_food" android:text="음식 추가" android:gravity="center"></Button>
	</RelativeLayout>
</LinearLayout>
