<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:background="@drawable/group_make_bg">
	<RelativeLayout android:layout_width="match_parent"
		android:id="@+id/relativeLayout1" android:layout_height="250dp">
		<ImageView android:src="@drawable/group_make_top"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginLeft="10dp" android:id="@+id/sbgrouproom_Iv1"
			android:layout_marginTop="20dp"></ImageView>
		<LinearLayout android:gravity="center" android:id="@+id/sbgrouproom_Ly1"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:orientation="vertical" android:layout_marginTop="25dp">
			<TextView android:text="Title" android:layout_height="wrap_content"
				android:textColor="#000000" android:textSize="30px" android:id="@+id/room_title"
				android:layout_width="wrap_content" android:layout_marginTop="3dp"></TextView>
		</LinearLayout>
		<LinearLayout android:id="@+id/sbgrouproom_Ly2"
			android:gravity="center" android:layout_below="@+id/sbgrouproom_Ly1"
			android:layout_alignParentLeft="true" android:layout_height="70dp"
			android:orientation="vertical" android:layout_width="match_parent"
			android:layout_marginTop="25dp">
			<LinearLayout android:orientation="horizontal"
				android:layout_height="wrap_content" android:layout_marginLeft="20dp"
				android:layout_width="fill_parent" android:id="@+id/sbgrouproom_Ly4">
				<ImageView android:layout_width="wrap_content" android:id="@+id/sbgrouproom_Iv4"
					android:src="@drawable/group_make_mission" android:layout_height="wrap_content"></ImageView>
				<TextView android:id="@+id/room_mission_name"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:text="Mission Name" android:textColor="#000000"
					android:layout_marginLeft="40dp"></TextView>
			</LinearLayout>

			<LinearLayout android:id="@+id/sbgrouproom_Ly5"
				android:layout_marginLeft="20dp" android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:layout_marginTop="3dp">
				<ImageView android:layout_width="wrap_content" android:id="@+id/sbgrouproom_Iv5"
					android:src="@drawable/group_make_people" android:layout_height="wrap_content"></ImageView>
				<TextView android:id="@+id/room_persons"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:textColor="#000000" android:text="4명"
					android:layout_marginLeft="40dp"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_width="match_parent"
				android:id="@+id/sbgrouproom_Ly6" android:layout_height="wrap_content"
				android:layout_marginLeft="20dp" android:layout_marginTop="3dp">
				<ImageView android:layout_width="wrap_content" android:id="@+id/sbgrouproom_Iv6"
					android:src="@drawable/group_make_term" android:layout_height="wrap_content"></ImageView>
				<TextView android:id="@+id/room_term"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:text="기간 : 1일 20시간 남음" android:textColor="#000000"
					android:layout_marginLeft="15dp"></TextView>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:id="@+id/sbgrouproom_Ly3"
			android:orientation="vertical" android:layout_height="wrap_content"
			android:gravity="center" android:layout_alignBottom="@+id/sbgrouproom_Iv1"
			android:layout_marginLeft="22dp" android:layout_marginBottom="14dp"
			android:layout_width="match_parent" android:layout_alignLeft="@+id/sbgrouproom_Iv7">
			<LinearLayout android:id="@+id/sbgrouproom_Ly7"
				android:layout_height="wrap_content" android:orientation="horizontal"
				android:layout_width="match_parent">
				<ImageView android:layout_width="wrap_content"
					android:src="@drawable/tag_walk" android:layout_height="wrap_content"
					android:id="@+id/sbgrouproom_Iv2"></ImageView>
				<TextView android:id="@+id/room_walking_goal"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:text="TextView" android:textColor="#000000"
					android:layout_marginLeft="20dp"></TextView>
			</LinearLayout>
			<LinearLayout android:id="@+id/sbgrouproom_Ly8"
				android:layout_height="wrap_content" android:layout_width="match_parent">
				<ImageView android:layout_width="wrap_content"
					android:src="@drawable/tag_motion" android:layout_height="wrap_content"
					android:id="@+id/sbgrouproom_Iv3"></ImageView>
				<TextView android:id="@+id/room_motion_goal"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:text="TextView" android:textColor="#000000"
					android:layout_marginLeft="20dp"></TextView>
			</LinearLayout>
		</LinearLayout>
		<ImageView android:id="@+id/sbgrouproom_Iv7" android:src="@drawable/group_make_totalgoal"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_above="@+id/sbgrouproom_Ly3" android:layout_alignLeft="@+id/sbgrouproom_Iv1"
			android:layout_marginLeft="22dp" android:layout_marginBottom="15dp"></ImageView>
	</RelativeLayout>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:id="@+id/sbgrouproom_Ly9">
		<ListView android:layout_weight="1" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/sbgrouproom_listView1"></ListView>
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content" android:gravity="center"
			android:id="@+id/sbgrouproom_Ly10">
			<Button android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:text="방 참여하기"
				android:id="@+id/join_group"></Button>
			<Button android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:text="종료하기" android:id="@+id/finish_group"
				android:visibility="gone"></Button>
		</LinearLayout>
	</LinearLayout>
	<ImageView android:src="@drawable/group_coupon"
		android:layout_height="match_parent" android:layout_width="fill_parent"
		android:id="@+id/sbgrouproom_Iv8"></ImageView>
</LinearLayout>
